<%= markup do |m|
  p = RecordFormPresenter.new(f, self)
  m << p.notes
  p.with_options(required: true) do |q|
    m << q.date_field_block(:study_date, "勉強した日付")
    m << q.text_field_block(:material, "教材", size: 32)
    m << q.study_time_block(:study_hour, :study_minute, "勉強時間", Record::HOURS_INT, Record::MINUTES_INT)
    m << q.text_field_block(:memo, "メモ", size: 32)
  end
end %>
