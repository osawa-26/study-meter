<!DOCTYPE html>
<html>
  <head>
    <title><%= document_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag "admin", media: "all", true: "all", "data-turbolinks-track": "true" %>
    <%= javascript_pack_tag "admin", "data-turbolinks-track": "true" %>
  </head>

  <body>
    <div id="wrapper">
      <%= render "admin/shared/header" %>
      <div id="container">
        <%= yield %>
      </div>
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
