<%= markup do |m|
  p = AppUserFormPresenter.new(f, self)
  m << p.notes
  p.with_options(required: true) do |q|
    m << q.full_name_block(:family_name, :given_name, "氏名")
    m << q.full_name_block(:family_name_kana, :given_name_kana, "フリガナ")
    m << q.text_field_block(:nickname, "ニックネーム", size: 32)
    m << q.text_field_block(:email, "メールアドレス", size: 32)
    m << q.date_field_block(:birthday, "生年月日")
    m << q.drop_down_list_block(:prefecture, "都道府県", AppUser::PREFECTURE_NAMES)
    m << q.text_field_block(:target, "勉強の目的")
  end
  m << p.gender_field_block
  m << p.suspended_check_box
end %>
